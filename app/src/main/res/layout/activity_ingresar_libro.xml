<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/libro"
    tools:context=".ingresarLibro">

    <LinearLayout
        android:layout_width="295dp"
        android:layout_height="394dp"
        android:layout_marginTop="32dp"
        android:background="#6FFFFFFF"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView17">

        <EditText
            android:id="@+id/et_libro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/aclonica"
            android:inputType="textPersonName"
            tools:text="Nombre Libro" />

        <Spinner
            android:id="@+id/sp_generoL"
            android:layout_width="match_parent"
            android:layout_height="41dp" />

        <Spinner
            android:id="@+id/sp_idiomaL"
            android:layout_width="match_parent"
            android:layout_height="45dp" />

        <Button
            android:id="@+id/button12"
            android:layout_width="251dp"
            android:layout_height="wrap_content"
            android:background="#CB221715"
            android:fontFamily="@font/aclonica"
            android:onClick="ingresarLibro"
            android:text="ENVIAR"
            android:textColor="#FBFBFB"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/aclonica"
        android:text="Completa los campos"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>