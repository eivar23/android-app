<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/libro"
    tools:context=".eliminarLibros">

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="349dp"
        android:layout_height="254dp"
        android:layout_marginTop="36dp"
        android:background="#86FFFCFC"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView22">

        <Spinner
            android:id="@+id/sp_libros1"
            android:layout_width="match_parent"
            android:layout_height="45dp" />
    </LinearLayout>

    <Button
        android:id="@+id/button13"
        android:layout_width="272dp"
        android:layout_height="40dp"
        android:layout_marginTop="36dp"
        android:background="#cb221715"
        android:fontFamily="@font/aclonica"
        android:onClick="eliminarL"
        android:text="ELIMINAR LIBRO"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:fontFamily="@font/aclonica"
        android:text="Seleccione un elemento de la lista"
        android:textColor="#FBFBFB"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>